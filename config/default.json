{
  "appName": "MajickKarpet",
  "version": "0.0.1",
  "logging": {
    "level": "info",
    "logToFile": true,
    "logDirectory": "logs",
    "logFile": "app.log"
  },
  "eventBus": {
    "debug": false
  },
  "browser": {
    "executablePath": "C:/Program Files/Google/Chrome/Application/chrome.exe",
    "userDataDir": "./user_data",
    "remoteDebuggingUrl": "http://127.0.0.1:9222",
    "headless": false,
    "defaultViewport": {
      "width": 1920,
      "height": 1080
    },
    "protocolTimeout": 60000,
    "launchArgs": [
      "--remote-debugging-port=9222",
      "--window-size=1920,1080"
    ]
  },
  "riskManagement": {
    "globalLimits": {
      "maxTotalExposureSOL": 1.0,
      "maxConcurrentTradesGlobal": 20,
      "globalMaxBuyAmountSOL": 0.2
    },
    "presaleEntryRisk": {
      "applySpecificLimits": true,
      "maxTickForPresaleRisk": 20,
      "maxBuyAmountSOL": 0.0005
    }
  },
  "webSocketClient": {
    "targetUrlPattern": "rugs.fun",
    "retryConnectionDelayMs": 5000
  },
  "strategies": [
    {
      "id": "simBotUser1Fixed",
      "name": "SimpleFixedTickTraderStrategy",
      "modulePath": "./strategies/simple-fixed-tick-trader-strategy.js",
      "enabled": false,
      "config": {
        "presaleBuyAmount": 0.001,
        "tickBuyAmount": 0.001,
        "buyTickModulus": 20,
        "buyTickOffset": 10,
        "sellTickModulus": 20,
        "sellTickOffset": 0,
        "sellPercentage": 100,
        "riskConfig": {
          "maxBuyAmountSOL": 0.0011,
          "maxOpenTradesPerGame": 5,
          "maxStrategyExposureSOL": 0.01,
          "minRequiredSafeTickCount": 5
        }
      }
    },
    {
      "id": "StatArbV1_Presale",
      "name": "StatisticalArbitrageV1_PresaleStrategy",
      "modulePath": "./strategies/statistical-arbitrage-v1-presale-strategy.js",
      "enabled": true,
      "config": {
        "presaleBuyAmountSOL": 0.0005,
        "entryMaxTick": 5,
        "minAcceptableEntryPrice": 1.0,
        "maxAcceptableEntryPrice": 1.05,
        "targetExitTickMin": 150,
        "targetExitTickMax": 199,
        "targetExitMultiplier": 5.45,
        "emergencyExitTick": 220,
        "minProfitTakeMultiplier": 1.1,
        "stopLossMultiplier": 0.15,
        "riskConfig": {
          "maxBuyAmountSOL": 0.0011,
          "maxOpenTradesPerGame": 1,
          "maxStrategyExposureSOL": 0.0011,
          "minRequiredSafeTickCount": 0
        }
      }
    }
  ]
} 